# {{ ansible_managed }}
# PHP-FPM pool configuration
[{{ app_name }}]
user = www-data
group = www-data
listen = /var/run/php/php{{ php_version }}-fpm-{{ app_name }}.sock
listen.owner = www-data
listen.group = www-data
listen.mode = 0660

pm = dynamic
pm.max_children = {{ ansible_processor_vcpus | default(1) * 4 }}
pm.start_servers = {{ ansible_processor_vcpus | default(1) }}
pm.min_spare_servers = {{ ansible_processor_vcpus | default(1) }}
pm.max_spare_servers = {{ ansible_processor_vcpus | default(1) * 2 }}

php_admin_value[memory_limit] = {{ php_memory_limit }}
php_admin_value[max_execution_time] = {{ php_max_execution_time }}
php_admin_value[upload_max_filesize] = 32M
php_admin_value[post_max_size] = 32M

{% if app_env == 'development' %}
php_admin_flag[display_errors] = on
php_admin_value[error_reporting] = E_ALL
{% else %}
php_admin_flag[display_errors] = off
php_admin_value[error_reporting] = E_ERROR
{% endif %}
